<h1>All about <%= @author.name %></h1>

<h2>Date of birth: <%= @author.date_of_birth %></h2>
<h2>Gender: <%= @author.gender %></h2>
<h2>Has a pseudonym: <%= @author.has_pseudonym %></h2>

<form action="/authors/<%= @author.id %>" method="post">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" >
  <input type="hidden" name="_method" value="delete">
    <button>Delete this author</button>
</form>

<a href="/authors/<%= @author.id %>/books">See this author's books</a>
